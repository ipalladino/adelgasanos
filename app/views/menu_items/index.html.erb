<div class="container">
  <div class="row">
    <div class="col-lg-12" >
      <h1>Listing menu_items</h1>

			<%= link_to 'New Menu item', new_menu_item_path, class: "btn btn-default" %>
			<br><br>

			<table class="table table-striped table-bordered">
			  <thead>
			    <tr>
			      <th>Title</th>
			      <th>Description</th>
			      <th>Url</th>
			      <th>Parent item</th>
			      <th colspan="3"></th>
			    </tr>
			  </thead>

			  <tbody>
			    <% @menu_items.each do |menu_item| %>
			      <tr>
			        <td><%= menu_item.title %></td>
			        <td><%= menu_item.description %></td>
			        <td><%= menu_item.url %></td>
			        <td><%= menu_item.parent_item_id %></td>
			        <td><%= link_to 'Show', menu_item %></td>
			        <td><%= link_to 'Edit', edit_menu_item_path(menu_item) %></td>
			        <td><%= link_to 'Destroy', menu_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			      </tr>
			    <% end %>
			  </tbody>
			</table>

			<br>

			<%= link_to 'New Menu item', new_menu_item_path, class: "btn btn-default" %>
			<br><br>
			
    </div>
  </div>
</div>