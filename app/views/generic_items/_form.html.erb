<div class="container">
  <div class="row">
    <div class="col-lg-12" >
      <%= form_for(@generic_item) do |f| %>
			  <% if @generic_item.errors.any? %>
			    <div id="error_explanation">
			      <h2><%= pluralize(@generic_item.errors.count, "error") %> prohibited this generic_item from being saved:</h2>

			      <ul>
			      <% @generic_item.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
			  <% end %>

			  <div class="field">
			    <%= f.label :title %><br>
			    <%= f.text_field :title, class: "form-control" %>
			  </div>
			  <div class="field">
			    <%= f.label :description %><br>
					<%= f.text_area :description, class: "form-control"  %>
			  </div>
			  <div class="field">
			    <%= f.label :graphic %><br>
			    <%= f.text_field :graphic, class: "form-control"  %>
			  </div>
			  <div class="field">
			    <%= f.label :button_link %><br>
			    <%= f.text_field :button_link, class: "form-control"  %>
			  </div>
			  <div class="field">
			    <%= f.label :button_text %><br>
			    <%= f.text_field :button_text, class: "form-control"  %>
			  </div>
				<div class="field">
			    <%= f.label :component %><br>
			    <!-- <%= f.text_field :component %> -->
					<%= render "shared/dropdown_components", obj: @generic_item %>
			  </div>
				<div class="field">
			    <%= f.label :parent_item_id %><br>
			    <%= f.text_field :parent_item_id %>
			  </div>
			  <div class="actions">
			    <%= f.submit "Submit" , class: "btn btm-default", style: "margin-top:20px;" %>
			  </div>
			<% end %>
    </div>
  </div>
</div>